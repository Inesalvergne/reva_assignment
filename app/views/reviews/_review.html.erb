<tr class="hover:bg-gray-50 transition-colors">
  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
    <%= review.company_name %>
  </td>

  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= review.display_date %>
  </td>

  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
    <span class="text-yellow-500">
      <%= review.display_rating %>
    </span>
  </td>

  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <% if review.channel.present? %>
      <div class="p-2 bg-gray-100 flex justify-center items-center gap-2 rounded-lg">
        <%= render "shared/svg/#{review.channel}" %>
        <%= review.channel.titleize %>
      </div>
    <% else %>
      <p>N/A</p>
    <% end %>
  </td>

  <td class="px-6 py-4 text-sm text-gray-500">
    <%= review.title %>
  </td>

  <td class="px-6 py-4 text-sm text-gray-500">
    <%= truncate(review.description, length: 60) %>
  </td>
</tr>
